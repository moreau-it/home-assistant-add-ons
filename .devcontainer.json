{
  "name": "Home Assistant Add-on Dev",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".devcontainer"
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "esbenp.prettier-vscode",
    "davidanson.vscode-markdownlint",
    "ms-azuretools.vscode-docker"
  ],
  "remoteUser": "vscode",
  "mounts": [
    "source=${localWorkspaceFolder}/../home-assistant-config,target=/workspaces/home-assistant-config,type=bind"
  ],
  "postCreateCommand": "bash -c 'echo Dev container ready!'"
}
